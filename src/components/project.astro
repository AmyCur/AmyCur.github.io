---
const {
    Image="url(/pine-tree.jpg)",
    Heading="Heading", 
    Height="15vw",
    Link="/"
} = Astro.props;
---
<div id="project" style=`background-image: ${Image}`>
    <a href={Link}>
        <h1>{Heading}</h1>
    </a>
</div>

<style lang="text/scss">
a{
    text-decoration: none;
}

@media screen and (min-width: 584px) {
    #project{
        width: 15vw;
        height: 15vw;

        h1{
            width: 15vw;
            height: 15vw;
        }
    }
}

@media screen and (max-width: 583px) {
    #project{
        width: 12em ;
        height: 12em;

        h1{
            width: 12em;
            height: 12em;
        }
    }
}

#project{
    margin-left: 1vw;
    margin-right: 1vw;
    
    overflow: hidden;
    background-repeat: no-repeat;
    background-size: cover;

    border: .13em solid #3D444D;   
    display: flex;
    justify-content: center;
    align-items: center;
    
    border-radius: 1vw;
    transition: background-size .2s ease, scale .3s ease-in-out;
    background-color: rgba(0,0,0,0);
    background-blend-mode: multiply;
    scale: 1;
    
    h1{
        display: flex;
        justify-content: center;
        align-items: center;
        transition: color .2s ease;
        color: #ffffff00;
        
        text-align: center;
        transition: all .3s ease;
    }

    &:hover{
        border: .13em solid #353a40;   
        scale: 1.05;

        h1{
            color: #fff;
            background-color: rgba(0,0,0,.5);
            backdrop-filter: blur(2px);
            

        }     
        transition: background-color .05s ease, scale .2s ease;
    }

    @media (pointer:none), (pointer:coarse) {
        border: .13em solid #353a40;   

        h1{
            color: #fff;
        }     
        transition: background-color .1s ease;

        
        background-color: rgba(0,0,0,.5);
        background-blend-mode: multiply;
    }
}
</style>
