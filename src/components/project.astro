---
import "../style/scss/project.scss"
const {
    Image="url(/pine-tree.jpg)",
    Heading="Heading", 
    Height="15vw",
    Link="/"
} = Astro.props;
---
<div id="project" style=`background-image: ${Image}; height: ${Height}`>
    <a href={Link}>
        <h1>{Heading}</h1>
    </a>
</div>

<style lang="text/scss">
a{
    text-decoration: none;
}
#project{
    margin-left: 1vw;
    margin-right: 1vw;
    margin-bottom: 7.5vh;
    
    overflow: hidden;
    background-repeat: no-repeat;
    background-size: cover;

    border: .13em solid #3D444D;   
    width: 15vw;
    display: flex;
    justify-content: center;
    align-items: center;
    
    border-radius: 1vw;
    transition: background-size .2s ease;
    background-color: rgba(0,0,0,0);
    background-blend-mode: multiply;
    
    h1{
        display: flex;
        justify-content: center;
        align-items: center;
        transition: color .2s ease;
        color: #ffffff00;
        width: 15vw;
        height: 15vw;
        text-align: center;
        transition: all .3s ease;
    }

    &:hover{
        border: .13em solid #353a40;   

        h1{
            color: #fff;
            background-color: rgba(0,0,0,.5);
            backdrop-filter: blur(2px);

        }     
        transition: background-color .1s ease;

        
        // background-blend-mode: multiply;
    }

    @media (pointer:none), (pointer:coarse) {
        border: .13em solid #353a40;   

        h1{
            color: #fff;
        }     
        transition: background-color .1s ease;

        
        background-color: rgba(0,0,0,.5);
        background-blend-mode: multiply;
    }
    


}
</style>

