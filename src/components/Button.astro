---
const {href, onClick} = Astro.props;
---

<a href={href}>
    <button onclick={onClick}><slot /></button>
</a>

<style lang="text/scss">
    button{
        border-radius: .4em;
        border: solid 1px #89c4f4;

        background-color: #567090;

        transition: all .1s ease;


        &:hover{
            cursor: pointer;
            color: #ebebad;
            scale: 1.1;
            background-color: #4c637e;
            
        }
    }
</style>