---
import Layout from '../layouts/Layout.astro';
import Project from '../components/project.astro';
import FadeElement from '../components/FadeElement.astro';
import Button from '../components/Button.astro';

const allPosts = Object.values(import.meta.glob('./projects/*.md', { eager: true }));

---

<Layout Page="Home">
	<div id="home">
		<!-- <video autoplay loop src="/test.mp4"  width="" height="" id="vid"></video> -->
		 <div id="intro">
			<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent in consequat odio. Aenean bibendum malesuada turpis, at dapibus lacus elementum sed </p>
			<div id="buttons">
				<Button onClick='document.getElementById("games").scrollIntoView({behavior: "smooth"})'>Go to my Projects</Button>
				<Button href="https://github.com/AmyCur">Go to my GitHub</Button>
			</div>
		</div>
		<h1 id="games">My Games</h1>
		<div id="project-master">
			<div id="projects">
				{allPosts.map((post: any) => <Project Heading={post.frontmatter.title}, Image={post.frontmatter.image}, Link={post.url}/>)}
			</div>
		</div>		
	</div>
	
</Layout>

<style lang="text/scss">

	#project-master{
		width: 70vw;
		height: fit-content;
		display: flex;
		justify-content: center;

		#projects{
			width: 100%;
			display: flex;
			flex-wrap: wrap;
			
			// ul{
			// 	display: flex;
			// 	flex-direction: column;
				
			// 	*{
			// 		margin-bottom: 2vh;
			// 	}
			// }
		}
	}

	@media screen and (max-width: 670px) {
		p{
			font-size: .5em;
		}

		#projects{
			#project{
				h1{
					font-size: 1em;
				}
			}
		}
		

		#buttons{
			display: flex;
			justify-content: space-between;
			align-items: center;
			button{
				font-size: .3em;
				width: 80%;
			}

		}
	}

	@media screen and (min-width: 671px) {
		font-size: .8em;
	}

	#home{
		display: flex;
		flex-direction: column;
		align-items: center;
		
		#intro{
			height: 80vh;
			width: 50%;
			font-size: 2.5em;
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;

			img{
				height: 8em;
				border-radius: .2em;
			}

			p{
				width: 80%;
				text-align: center;
			}

			#buttons{
				button{
					// background: linear-gradient(to right top, #515782, #8892d3);
					background-color: white;
					color: black;
					border: none;
					padding: .5em;
					border-radius: .5em;
					transition: scale .2s ease;

					&:hover{
						scale: 1.3;
					}
				}
			}
		}
	}
</style>
