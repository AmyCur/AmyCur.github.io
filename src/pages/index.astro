---
import Layout from '../layouts/Layout.astro';
import Project from '../components/project.astro';
import Button from '../components/Button.astro';
import Brand from '../components/brand.astro';

const allPosts = Object.values(import.meta.glob('./projects/*.md', { eager: true }));

---

<Layout Page="Home">
	<div id="home">
		<!-- <video autoplay loop src="/test.mp4"  width="" height="" id="vid"></video> -->
		 <div id="intro">
			<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent in consequat odio. Aenean bibendum malesuada turpis, at dapibus lacus elementum sed </p>
			<div id="buttons">
				<Button onClick='document.getElementById("games").scrollIntoView({behavior: "smooth"})'>Go to my Projects</Button>
				<Button href="https://github.com/AmyCur">Go to my GitHub</Button>
			</div>
		</div>
		<h1 id="games">My Games</h1>
		<div id="project-master">
			<div id="projects">
				{allPosts.map((post: any) => <Project Heading={post.frontmatter.title}, Image={post.frontmatter.image}, Link={post.url}/>)}
			</div>
		</div>		
		<div id="worked-with">
			<h1>Worked with</h1>
			<div id="brands">
				<Brand img="/iconika.png">Iconika</Brand>
				<Brand img="/tree2.avif">Other</Brand>
				<Brand img="/tree2.avif">Otherr</Brand>
			</div>
			
		</div>
		<div id="about-me">
			<h1>About Me</h1>
			<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent in consequat odio. Aenean bibendum malesuada turpis, at dapibus lacus elementum sed Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent in consequat odio. Aenean bibendum malesuada turpis, </p>
		</div>
	</div>
	
</Layout>

<style lang="text/scss">

	@media screen and (min-width: 585px) {
		#projects{
			flex-direction: row;
		}

		
		
	}

	@media screen and (max-width: 584px) {
		#projects{
			align-items: center;
			flex-direction: column;

			#project{
				margin-top: 1em;
			}
		}

		#buttons{
			button{
				height: 4vh;
			}
		}
	}

	#project-master{
		width: 70vw;
		height: fit-content;
		display: flex;
		justify-content: center;

		#projects{
			margin-bottom: 3.5vh;
			margin-top: 3.5vh;
			width: 100%;
			display: flex;
			flex-wrap: wrap;
		}
	}

	@media screen and (max-width: 735px) {
		p{
			font-size: .5em;
		}

		#projects{

			#project{
				h1{
					font-size: 1em;
				}
			}
		}

		#buttons{
			display: flex;
			flex-direction: column;
			justify-content: space-around;

			button{
				width: 100%;
				height: 5vh;
			}	
		}
		

		// #buttons{
		// 	display: flex;
		// 	justify-content: space-between;
		// 	align-items: center;
		// 	button{
		// 		font-size: .3em;
		// 		width: 80%;
		// 	}

		// }
	}

	@media screen and (min-width: 736px) {
		font-size: .8em;
	}

	#home{
		display: flex;
		flex-direction: column;
		align-items: center;

		#about-me{
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			width: 40%;

			p{
				font-size: 1.7em;
			}
		}

		#worked-with{
			text-align: center;

			#brands{
				display: flex;
				justify-content: space-around;
				align-items: center;
				text-align: center;
			}
		}
		
		#intro{
			height: 80vh;
			width: 50%;
			font-size: 2.5em;
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;

			img{
				height: 8em;
				border-radius: .2em;
			}

			p{
				width: 80%;
				text-align: center;
			}

			#buttons{
				button{
					margin-left: 1em;
					margin-right: 1em;
					padding: .5em;
					overflow: hidden;
					font-size: .4em;
				}
			}
		}
	}
</style>
